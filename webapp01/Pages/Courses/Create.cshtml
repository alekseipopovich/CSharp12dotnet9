@page
@model webapp01.Pages.Courses.CreateModel
@{
    ViewData["Title"] = "Добавить курс";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group mb-3">
                <label asp-for="Course.Name" class="control-label">Название</label>
                <input asp-for="Course.Name" class="form-control" />
                <span asp-validation-for="Course.Name" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Course.Description" class="control-label">Описание</label>
                <textarea asp-for="Course.Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Course.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary" />
                <a asp-page="Index" class="btn btn-secondary">Назад к списку</a>
            </div>
        </form>
    </div>
</div> 