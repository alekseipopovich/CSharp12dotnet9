@page
@model webapp01.Pages.Students.IndexModel
@{
    ViewData["Title"] = "Список студентов";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">Добавить студента</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Фамилия</th>
            <th>Имя</th>
            <th>Email</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model.Students)
        {
            <tr>
                <td>@student.LastName</td>
                <td>@student.FirstName</td>
                <td>@student.Email</td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@student.Id" class="btn btn-primary btn-sm">Изменить</a>
                    <a asp-page="./Details" asp-route-id="@student.Id" class="btn btn-info btn-sm">Детали</a>
                    <a asp-page="./Delete" asp-route-id="@student.Id" class="btn btn-danger btn-sm">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table> 